<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_seventh"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:background="@color/background_question"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Спасибо за то, что Вы выбрали квесты Взаперти! Мы бы хотели сообщать вам об открытии новых квестов, для этого укажите свой номер телефона."
            android:id="@+id/textView"
            android:textSize="36sp"
            android:textColor="@color/text_main" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_f"
            android:backgroundTint="@color/text_main"
            android:hint="Номер телефона"
            android:inputType="phone"
            android:textColor="@color/text_main"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/text_main" />
    </LinearLayout>


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Продолжить"
        android:id="@+id/button_next"
        android:onClick="next"
        android:background="@color/button_green"
        android:textColor="@color/text_main"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>