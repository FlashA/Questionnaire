<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_fifth"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:background="@color/background_question"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Помогите стать нам лучше. Мы ценим любые отзывы!  Напишите свои пожелания по улучшению игрового процесса на любом этапе. Напишите Ваши пожелания, чего вам не хватило, что вы бы хотели изменить! (Ответ необязателен)"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:textColor="@color/text_main" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_f"
            android:backgroundTint="@color/text_main"
            android:textColor="@color/text_main"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/text_main" />
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Следующий вопрос"
        android:id="@+id/button_next"
        android:onClick="next"
        android:background="@color/button_green"
        android:textColor="@color/text_main"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Предыдущий вопрос"
        android:id="@+id/button_previous"
        android:background="@color/button_green"
        android:textColor="@color/text_main"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="30dp"/>
</RelativeLayout>